      "@swiss-qr-invoice-generator/client/shared/globals": [
        "libs/client/shared/globals/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/common/http": [
        "libs/shared/common/http/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/testing": [
        "libs/shared/testing/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/theme": [
        "libs/shared/theme/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/ui/button": [
        "libs/shared/ui/button/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/ui/dialog": [
        "libs/shared/ui/dialog/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/ui/icons": [
        "libs/shared/ui/icons/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/ui/image-upload": [
        "libs/shared/ui/image-upload/src/index.ts"
      ],
      "@swiss-qr-invoice-generator/shared/ui/wizard": [
        "libs/shared/ui/wizard/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
